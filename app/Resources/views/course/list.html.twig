{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des courses</h1>

    <table>
        <thead>
            <tr>
                <th>Nom du chauffeur</th>
                <th>Prénom du chauffeur</th>
                <th>Id de la course</th>
                <th>Lieu de départ</th>
                <th>Lieu d'arrivée</th>
                <th>Distance</th>
                {# <th>Nombre de passagers</th>
                <th>actions</th> #}
            </tr>
        </thead>
        <tbody>
            {% for course in courses %}
                <tr>
                    <td>
                        {{course.chauffeur.nom }}
                    </td>
                    <td>
                        {{course.chauffeur.prenom }}
                    </td>

                    <td>
                        {{course.id }}
                    </td>

                    {# <td>
                        <a href="{{ path('admin_adresse_show', { 'id': course.adresseDebut.id }) }}">{{course.adresseDebut}}</a>

                    </td> #}

                    <td>
                        {{course.adresseDebut.numero ~ course.adresseDebut.rue ~ ' ' ~ course.adresseDebut.codePostal ~ ' ' ~ course.adresseDebut.ville}}
                    </td>
                    <td>
                        {{course.adresseFin.numero ~ course.adresseFin.rue ~ ' ' ~ course.adresseFin.codePostal ~ ' ' ~ course.adresseFin.ville}}
                    </td>
                    <td>{{ course.distance ~ ' km'}}</td>

                    {# <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_course_show', { 'id': course.id }) }}">Afficher</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_course_edit', { 'id': course.id }) }}">Modifier</a>
                            </li>
                        </ul>
                    </td>  #}
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {# <ul>
        <li>
            <a href="{{ path('admin_course_new') }}">Créer une nouvelle course</a>
        </li>
    </ul> #}
{% endblock %}